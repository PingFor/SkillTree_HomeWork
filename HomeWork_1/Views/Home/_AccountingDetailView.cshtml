@model List<HomeWork_1.Models.Accounting>
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>

            @{for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>
                            @if (Model[i].Type == 1)
                            {
                                @:收入
                            }
                            else
                            {
                                @:支出
                            }
                        </td>
                        <td>@Model[i].Date.ToString("yyyy/MM/dd")</td>
                        <td>@Model[i].Amount.ToString("###,###")</td>
                    </tr>
                }
            }

        </table>
    </div>
</div>
